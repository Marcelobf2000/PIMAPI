{
    "openapi": "3.0.3",
    "info":{
        "title": "API - Hotel Management",
        "description": "CRUD, DDL e MDL entre banco MSSQL com aux√≠lio do sequalize para consumo em diferentes plataformas",
        "termsOfService": "Null",
        "contact":{
            "email": "OctocatsUnip@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:5000",
            "description": "API dev"
        }
    ],
    "paths":{
        "/quartos":{
            "post":{
               "summary" : "Cadastro de Pessoa",
               "description": "Rota para cadastro de pessoa",
               "tags": ["People"],
               "requestBody":{
                   "content": {
                       "application/json":{
                           "schema": {
                                "$ref": "#/components/schemas/Bedroom"
                           },
                           "examples": {
                                "bedroom" : {
                                    "value":{
                                        "valor": 950,
                                        "numBed": 1
                                    }
                                }
                           }
                       }
                   }
               },
               "responses": {
                   "200":{
                       "description": "OK",
                       "content": {
                           "application/json":{
                               "schema":{
                                "type": "object",
                                "$ref": "#/components/schemas/Bedroom"
                               }
                           }
                       }
                   }
               }
            },
            "get": {
                "summary": "Lista de quartos",
                "description": "Listagem de todos os quartos do banco",
                "tags": ["Bedrooms"],
                "responses": {
                    "200":{
                        "description": "OK",
                        "content": {
                            "application/json":{
                                "schema":{
                                 "type": "array",
                                 "items":{
                                    "$ref": "#/components/schemas/Bedroom"
                                 }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components":{
        "schemas":{
            "Bedroom":{
                "type": "object",
                "properties": {
                    "valor": {
                        "type": "number"
                    },
                    "numBed": {
                        "type": "number"
                    }
                }
            }
        }
    }
}